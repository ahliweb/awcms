---
import PageLayout from '~/layouts/PageLayout.astro';
import Header from '~/components/widgets/Header.astro';

import { headerData as fallbackHeaderData } from '~/navigation';
import { createClientFromEnv } from '~/lib/supabase';
import { getHeaderMenu, mapMenuItemsToHeaderLinks } from '~/lib/menu';
import type { HeaderLink } from "~/lib/menu";
import type { MetaData } from '~/types';

export interface Props {
  metadata?: MetaData;
}

const { metadata } = Astro.props;
const tenantId = Astro.locals.tenant_id || null;
const supabase = createClientFromEnv(
  Astro.locals.runtime?.env || import.meta.env,
);

let headerLinks: HeaderLink[] = fallbackHeaderData.links;

if (supabase && tenantId) {
  const headerItems = await getHeaderMenu(supabase, tenantId);
  if (headerItems.length > 0) {
    headerLinks = mapMenuItemsToHeaderLinks(headerItems);
  }
}
---

<PageLayout metadata={metadata}>
  <Fragment slot="announcement">
    <slot name="announcement" />
  </Fragment>
  <Fragment slot="header">
    <slot name="header">
      <Header
        links={headerLinks?.[2] ? [headerLinks[2]] : headerLinks}
        actions={[
          {
            text: 'Download',
            href: 'https://ahliweb.co.id',
          },
        ]}
        showToggleTheme
        position="right"
      />
    </slot>
  </Fragment>
  <slot />
</PageLayout>
