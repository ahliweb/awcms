---
import Header from '../components/pongo/Header.astro';
import Footer from '../components/pongo/Footer.astro';

interface Props {
  title?: string;
  description?: string;
  image?: string;
  noHeader?: boolean;
  noFooter?: boolean;
}

const { title = "AWCMS Public", description = "Powered by AWCMS", noHeader = false, noFooter = false } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="author" content="awcms">
    <meta name="description" content={description}>

    <title>{title}</title>
    
    <link href="/pongo/assets/css/themify-icons.css" rel="stylesheet">
    <link href="/pongo/assets/css/flaticon.css" rel="stylesheet">
    <link href="/pongo/assets/css/bootstrap.min.css" rel="stylesheet">
    <link href="/pongo/assets/css/animate.css" rel="stylesheet">
    <link href="/pongo/assets/css/owl.carousel.css" rel="stylesheet">
    <link href="/pongo/assets/css/owl.theme.css" rel="stylesheet">
    <link href="/pongo/assets/css/slick.css" rel="stylesheet">
    <link href="/pongo/assets/css/slick-theme.css" rel="stylesheet">
    <link href="/pongo/assets/css/swiper.min.css" rel="stylesheet">
    <link href="/pongo/assets/css/owl.transitions.css" rel="stylesheet">
    <link href="/pongo/assets/css/jquery.fancybox.css" rel="stylesheet">
    <link href="/pongo/assets/css/style.css" rel="stylesheet">

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>

    <!-- start page-wrapper -->
    <div class="page-wrapper">

        <!-- start preloader -->
        <div class="preloader">
            <div class="lds-ellipsis">
                <div></div>
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>
        <!-- end preloader -->

        { !noHeader && <Header /> }
        
        <slot />

        { !noFooter && <Footer /> }

    </div>
    <!-- end of page-wrapper -->

    <!-- All JavaScript files -->
    <script is:inline src="/pongo/assets/js/jquery.min.js"></script>
    <script is:inline src="/pongo/assets/js/bootstrap.min.js"></script>

    <!-- Plugins for this template -->
    <script is:inline src="/pongo/assets/js/jquery-plugin-collection.js"></script>

    <!-- Custom script for this template -->
    <script is:inline src="/pongo/assets/js/script.js"></script>
</body>
</html>
