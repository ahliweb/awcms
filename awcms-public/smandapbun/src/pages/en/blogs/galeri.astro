---
import Layout from "../../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import {
  getLocale,
  t,
  getLocalizedValue,
  getLocalizedPath,
  type Locale,
} from "../../../utils/i18n";
import { getGalleryData } from "../../../lib/api";

const locale = getLocale(Astro.url) as Locale;
const galleryData = await getGalleryData();
const { gallery } = galleryData;

// Load local images
const localImagesGlob = import.meta.glob<{ default: ImageMetadata }>(
  "../../assets/foto-smandapbun/kegiatan-sekolah/*.{webp,jpg,jpeg,png}",
  { eager: true },
);

const localImages = Object.values(localImagesGlob).map((img) => img.default);

// Combine with existing albums if needed, or just append as a new album
// We'll create a unified structure for rendering
interface GalleryItem {
  type: "local" | "remote";
  src: string | ImageMetadata;
  alt: string;
}

interface Album {
  title: { id: string; en: string };
  images: GalleryItem[];
}

const albums: Album[] = [
  // ...gallery.albums.map((album: any) => ({
  //   title: album.title,
  //   images: album.images.map((img: string) => ({
  //     type: "remote" as const,
  //     src: img,
  //     alt: getLocalizedValue(album.title, locale),
  //   })),
  // })),
  // Add the local images as a new album
  {
    title: {
      id: "Kegiatan Sekolah",
      en: "School Activities",
    },
    images: localImages.map((img, index) => ({
      type: "local" as const,
      src: img,
      alt: `School Activity ${index + 1}`,
    })),
  },
];
---

<Layout title={getLocalizedValue(gallery.title, locale)}>
  <!-- Hero -->
  <section
    class="hero-gradient text-white py-16 md:py-20"
    style="--hero-image: url('/images/backgrounds/hero-activity.webp');"
    data-testid="gallery-hero"
  >
    <div class="container-custom">
      <nav class="text-sm text-blue-200 mb-4">
        <a href={getLocalizedPath("/", locale)} class="hover:text-white"
          >Beranda</a
        >
        <span class="mx-2">/</span>
        <a href={getLocalizedPath("/blogs", locale)} class="hover:text-white"
          >{t("blogs.title", locale)}</a
        >
        <span class="mx-2">/</span>
        <span class="text-white">{t("blogs.gallery", locale)}</span>
      </nav>
      <h1 class="text-3xl md:text-4xl font-bold font-heading">
        {getLocalizedValue(gallery.title, locale)}
      </h1>
    </div>
  </section>

  <!-- Gallery -->
  <section
    class="section-photo py-16 bg-gray-50 dark:bg-slate-900 transition-colors duration-200"
    style="--section-image: url('/images/backgrounds/section-green.webp');"
    data-testid="gallery-content"
  >
    <div class="container-custom">
      <!-- Category Filter -->
      <div
        class="flex flex-wrap justify-center gap-3 mb-10"
        data-testid="gallery-filters"
      >
        <button
          class="filter-btn active px-5 py-2 rounded-full text-sm font-medium transition-all duration-300 bg-primary-600 text-white shadow-lg shadow-primary-500/30"
          data-category="all"
        >
          {t("common.all", locale) || "Semua"}
        </button>
        {
          albums.map((album) => (
            <button
              class="filter-btn px-5 py-2 rounded-full text-sm font-medium transition-all duration-300 bg-white dark:bg-slate-800 text-gray-600 dark:text-gray-300 hover:bg-gray-100 dark:hover:bg-slate-700 border border-gray-200 dark:border-gray-700"
              data-category={(getLocalizedValue(album.title, locale) as string)
                .toLowerCase()
                .replace(/\s+/g, "-")}
            >
              {getLocalizedValue(album.title, locale)}
            </button>
          ))
        }
      </div>

      <!-- Photo Grid -->
      <div
        class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4"
        id="gallery-grid"
      >
        {
          albums
            .flatMap((album) =>
              album.images.map((image: GalleryItem, imageIndex: number) => ({
                ...image,
                category: (getLocalizedValue(album.title, locale) as string)
                  .toLowerCase()
                  .replace(/\s+/g, "-"),
                categoryResult: getLocalizedValue(
                  album.title,
                  locale,
                ) as string,
                id: `${(getLocalizedValue(album.title, locale) as string)
                  .toLowerCase()
                  .replace(/\s+/g, "-")}-${imageIndex}`,
              })),
            )
            .map(
              (
                image: GalleryItem & {
                  category: string;
                  categoryResult: string;
                  id: string;
                },
                index: number,
              ) => (
                <div
                  class="gallery-item group relative aspect-square bg-gray-200 dark:bg-slate-800 rounded-xl overflow-hidden cursor-pointer"
                  data-category={image.category}
                  data-index={index}
                  data-src={
                    image.type === "local"
                      ? (image.src as ImageMetadata).src
                      : image.src
                  }
                  data-caption={`${image.alt} - ${image.categoryResult}`}
                  data-testid={`gallery-image-${index}`}
                >
                  {image.type === "local" ? (
                    <Image
                      src={image.src as ImageMetadata}
                      alt={image.alt}
                      width={400}
                      height={400}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    />
                  ) : (
                    <img
                      src={image.src as string}
                      alt={image.alt}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-500"
                    />
                  )}
                  <div class="absolute inset-0 bg-black/0 group-hover:bg-black/40 transition-colors duration-300 flex items-center justify-center">
                    <div class="transform translate-y-4 opacity-0 group-hover:translate-y-0 group-hover:opacity-100 transition-all duration-300">
                      <Icon
                        name="tabler:zoom-in"
                        class="w-10 h-10 text-white drop-shadow-md"
                      />
                    </div>
                    <div class="absolute bottom-0 left-0 right-0 p-4 bg-gradient-to-t from-black/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300">
                      <p class="text-white text-xs font-medium truncate">
                        {image.alt}
                      </p>
                      <p class="text-gray-300 text-[10px] uppercase tracking-wider">
                        {image.categoryResult}
                      </p>
                    </div>
                  </div>
                </div>
              ),
            )
        }
      </div>

      <!-- Back Button -->
      <div class="mt-12 text-center">
        <a
          href={getLocalizedPath("/blogs", locale)}
          class="inline-flex items-center btn-outline dark:text-white dark:border-gray-600 dark:hover:bg-slate-800 transition-transform hover:-translate-x-1"
          data-testid="back-to-blogs"
        >
          <Icon name="tabler:arrow-left" class="w-5 h-5 mr-2" />
          {t("common.back", locale)}
        </a>
      </div>
    </div>
  </section>

  <!-- Lightbox Modal -->
  <div
    id="lightbox"
    class="fixed inset-0 z-[9999] bg-black/95 backdrop-blur-sm hidden flex items-center justify-center opacity-0 transition-opacity duration-300"
    role="dialog"
    aria-modal="true"
    aria-label="Image Lightbox"
  >
    <!-- Close Button -->
    <button
      id="lightbox-close"
      class="absolute top-4 right-4 text-white/70 hover:text-white p-2 rounded-full hover:bg-white/10 transition-colors z-[10001]"
    >
      <Icon name="tabler:x" class="w-8 h-8" />
    </button>

    <!-- Navigation Buttons -->
    <button
      id="lightbox-prev"
      class="absolute left-4 top-1/2 -translate-y-1/2 text-white/70 hover:text-white p-3 rounded-full hover:bg-white/10 transition-colors z-[10001] hidden md:block group"
    >
      <Icon
        name="tabler:chevron-left"
        class="w-10 h-10 group-hover:-translate-x-1 transition-transform"
      />
    </button>
    <button
      id="lightbox-next"
      class="absolute right-4 top-1/2 -translate-y-1/2 text-white/70 hover:text-white p-3 rounded-full hover:bg-white/10 transition-colors z-[10001] hidden md:block group"
    >
      <Icon
        name="tabler:chevron-right"
        class="w-10 h-10 group-hover:translate-x-1 transition-transform"
      />
    </button>

    <!-- Image Container -->
    <div
      class="relative w-full h-full max-w-5xl max-h-screen p-4 md:p-10 flex items-center justify-center"
    >
      <img
        id="lightbox-img"
        src=""
        alt=""
        class="max-w-full max-h-full object-contain rounded-md shadow-2xl transition-transform duration-300 scale-95 opacity-0"
      />

      <!-- Caption -->
      <div
        class="absolute bottom-6 left-0 right-0 text-center px-4 pointer-events-none"
      >
        <div
          class="inline-block bg-black/60 backdrop-blur-md rounded-xl px-6 py-3 text-white pointer-events-auto max-w-2xl"
        >
          <p id="lightbox-caption" class="text-sm md:text-base font-medium"></p>
          <p id="lightbox-counter" class="text-xs text-gray-400 mt-1"></p>
        </div>
      </div>
    </div>
  </div>

  <script>
    function initGallery() {
      const galleryGrid = document.getElementById("gallery-grid");
      if (!galleryGrid || galleryGrid.hasAttribute("data-initialized")) return;
      galleryGrid.setAttribute("data-initialized", "true");

      console.log("Initializing gallery...");

      // DOM Elements
      const filters = document.querySelectorAll(".filter-btn");
      const items = document.querySelectorAll(".gallery-item");
      const lightbox = document.getElementById("lightbox");
      const lightboxImg = document.getElementById(
        "lightbox-img",
      ) as HTMLImageElement;
      const lightboxCaption = document.getElementById("lightbox-caption");
      const lightboxCounter = document.getElementById("lightbox-counter");

      let currentVisibleIndex = 0;
      let visibleItems: HTMLElement[] = []; // Only navigate through filtered items

      // Initialize visible items
      updateVisibleItems("all");

      // 1. Filtering Logic
      filters.forEach((btn) => {
        btn.addEventListener("click", () => {
          // Toggle active class
          filters.forEach((b) => {
            b.classList.remove(
              "active",
              "bg-primary-600",
              "text-white",
              "shadow-lg",
              "shadow-primary-500/30",
            );
            b.classList.add(
              "bg-white",
              "text-gray-600",
              "border",
              "border-gray-200",
              "dark:bg-slate-800",
              "dark:text-gray-300",
              "dark:border-gray-700",
            );
          });
          btn.classList.add(
            "active",
            "bg-primary-600",
            "text-white",
            "shadow-lg",
            "shadow-primary-500/30",
          );
          btn.classList.remove(
            "bg-white",
            "text-gray-600",
            "border",
            "border-gray-200",
            "dark:bg-slate-800",
            "dark:text-gray-300",
            "dark:border-gray-700",
          );

          const category = btn.getAttribute("data-category");
          updateVisibleItems(category);
        });
      });

      function updateVisibleItems(category: string | null) {
        visibleItems = [];
        const allItems = document.querySelectorAll(".gallery-item"); // Re-query directly to ensure clean state
        allItems.forEach((item) => {
          const el = item as HTMLElement;
          const itemCategory = el.getAttribute("data-category");

          if (category === "all" || itemCategory === category) {
            el.style.display = "block";
            // Add simple animation
            el.animate(
              [
                { transform: "scale(0.9)", opacity: 0 },
                { transform: "scale(1)", opacity: 1 },
              ],
              { duration: 300, easing: "ease-out" },
            );
            visibleItems.push(el);
          } else {
            el.style.display = "none";
          }
        });
      }

      // 2. Lightbox Logic
      items.forEach((item) => {
        item.addEventListener("click", (e) => {
          e.preventDefault(); // Prevent default link behavior if any
          const clickedItem = item as HTMLElement;
          // IMPORTANT: Find index within the CURRENTLY VISIBLE items
          // We need to match the clicked element to one in the visibleItems array
          const index = visibleItems.findIndex(
            (visItem) => visItem === clickedItem,
          );

          if (index !== -1) {
            currentVisibleIndex = index;
            openLightbox();
          } else {
            console.warn(
              "Clicked item not found in visible items list",
              clickedItem,
            );
          }
        });
      });

      function openLightbox() {
        if (!lightbox || !lightboxImg) return;
        updateLightboxContent();

        lightbox.classList.remove("hidden");
        // Small delay to allow display:block to apply before opacity transition
        requestAnimationFrame(() => {
          lightbox.classList.remove("opacity-0");
          lightboxImg.classList.remove("scale-95", "opacity-0");
        });
        document.body.style.overflow = "hidden"; // Prevent scrolling
      }

      function closeLightbox() {
        if (!lightbox || !lightboxImg) return;

        lightbox.classList.add("opacity-0");
        lightboxImg.classList.add("scale-95", "opacity-0");

        setTimeout(() => {
          lightbox.classList.add("hidden");
          document.body.style.overflow = "";
        }, 300);
      }

      function updateLightboxContent() {
        if (
          !visibleItems[currentVisibleIndex] ||
          !lightboxImg ||
          !lightboxCaption ||
          !lightboxCounter
        )
          return;

        const currentItem = visibleItems[currentVisibleIndex];
        const src = currentItem.getAttribute("data-src");
        const caption = currentItem.getAttribute("data-caption");

        // Preload image for smoother transition could go here
        lightboxImg.src = src || "";
        lightboxCaption.textContent = caption || "";
        lightboxCounter.textContent = `${currentVisibleIndex + 1} / ${visibleItems.length}`;
      }

      function showNext() {
        currentVisibleIndex = (currentVisibleIndex + 1) % visibleItems.length;
        updateLightboxContent();
      }

      function showPrev() {
        currentVisibleIndex =
          (currentVisibleIndex - 1 + visibleItems.length) % visibleItems.length;
        updateLightboxContent();
      }

      // Event Listeners
      const newCloseBtn = document.getElementById("lightbox-close");
      newCloseBtn?.addEventListener("click", closeLightbox);

      const newNextBtn = document.getElementById("lightbox-next");
      newNextBtn?.addEventListener("click", (e) => {
        e.stopPropagation();
        showNext();
      });

      const newPrevBtn = document.getElementById("lightbox-prev");
      newPrevBtn?.addEventListener("click", (e) => {
        e.stopPropagation();
        showPrev();
      });

      // Close on background click
      lightbox?.addEventListener("click", (e) => {
        if (e.target === lightbox) closeLightbox();
      });

      // Keyboard navigation
      document.addEventListener("keydown", (e) => {
        if (lightbox?.classList.contains("hidden")) return;

        if (e.key === "Escape") closeLightbox();
        if (e.key === "ArrowRight") showNext();
        if (e.key === "ArrowLeft") showPrev();
      });
    }

    // Initialize on load
    document.addEventListener("DOMContentLoaded", initGallery);
    // Initialize on View Transitions nav
    document.addEventListener("astro:page-load", initGallery);
  </script>
</Layout>
