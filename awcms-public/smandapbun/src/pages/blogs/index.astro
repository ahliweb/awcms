---
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import {
  getLocale,
  t,
  getLocalizedValue,
  getLocalizedPath,
  type Locale,
} from "../../utils/i18n";
import { getPosts } from "../../lib/api";

const locale = getLocale(Astro.url) as Locale;
const posts = await getPosts(100);
// posts are already sorted by default from API
---

<Layout title={t("blogs.title", locale)}>
  <!-- Hero -->
  <section
    class="hero-gradient text-white py-16 md:py-24"
    style="--hero-image: url('/images/backgrounds/hero-students.webp');"
    data-testid="blogs-hero"
  >
    <div class="container-custom">
      <p class="text-secondary-300 font-medium mb-2">
        {t("nav.blogs", locale)}
      </p>
      <h1 class="text-4xl md:text-5xl font-bold font-heading">
        {t("blogs.latest", locale)}
      </h1>
    </div>
  </section>

  <!-- Blogs Grid -->
  <section
    class="section-photo py-16 bg-gray-50 dark:bg-slate-900 transition-colors duration-200"
    style="--section-image: url('/images/backgrounds/section-field.webp');"
    data-testid="blogs-list"
  >
    <div class="container-custom">
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Main Content -->
        <div class="lg:col-span-2">
          <div class="grid md:grid-cols-2 gap-6">
            {
              posts.map((blog: any) => (
                <article
                  class="bg-white dark:bg-slate-800 rounded-xl overflow-hidden shadow-sm hover:shadow-md transition-all group h-full flex flex-col"
                  data-testid={`blog-card-${blog.slug}`}
                >
                  <div class="aspect-video bg-gray-200 dark:bg-slate-700 overflow-hidden relative">
                    <img
                      src={blog.image}
                      alt={getLocalizedValue(blog.title, locale)}
                      class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                    />
                    <div class="absolute top-4 left-4">
                      <span class="bg-primary-600 text-white text-xs font-bold px-3 py-1 rounded-full uppercase tracking-wider">
                        {blog.category}
                      </span>
                    </div>
                  </div>
                  <div class="p-6 flex flex-col flex-grow">
                    <div class="flex items-center text-sm text-gray-500 dark:text-gray-400 mb-3">
                      <Icon name="tabler:calendar" class="w-4 h-4 mr-1" />
                      {new Date(blog.created_at).toLocaleDateString(
                        locale === "id" ? "id-ID" : "en-US",
                        { day: "numeric", month: "long", year: "numeric" },
                      )}
                    </div>
                    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors line-clamp-2">
                      {getLocalizedValue(blog.title, locale)}
                    </h3>
                    <p class="text-gray-600 dark:text-gray-300 mb-6 line-clamp-3 text-sm flex-grow">
                      {getLocalizedValue(blog.excerpt, locale)}
                    </p>
                    <a
                      href={getLocalizedPath(`/blogs/${blog.slug}`, locale)}
                      class="text-primary-600 dark:text-primary-400 font-medium text-sm flex items-center hover:text-primary-700 dark:hover:text-primary-300"
                    >
                      {t("common.read_more", locale)}
                      <Icon name="tabler:arrow-right" class="w-4 h-4 ml-1" />
                    </a>
                  </div>
                </article>
              ))
            }
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <a
            href={getLocalizedPath("/blogs/agenda", locale)}
            class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-100 dark:hover:bg-slate-800 transition-colors"
          >
            <span class="text-gray-700 dark:text-gray-300"
              >{t("blogs.agenda", locale)}</span
            >
            <Icon name="tabler:chevron-right" class="w-5 h-5 text-gray-400" />
          </a>
          <a
            href={getLocalizedPath("/blogs/galeri", locale)}
            class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-100 dark:hover:bg-slate-800 transition-colors"
          >
            <span class="text-gray-700 dark:text-gray-300"
              >{t("blogs.gallery", locale)}</span
            >
            <Icon name="tabler:chevron-right" class="w-5 h-5 text-gray-400" />
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
