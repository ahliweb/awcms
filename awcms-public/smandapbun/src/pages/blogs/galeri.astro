---
import Layout from "../../layouts/Layout.astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import {
  getLocale,
  t,
  getLocalizedValue,
  getLocalizedPath,
  type Locale,
} from "../../utils/i18n";
import { getGalleryData } from "../../lib/api";

const locale = getLocale(Astro.url) as Locale;
const galleryData = await getGalleryData();
const { gallery } = galleryData;

// Load local images
const localImagesGlob = import.meta.glob<{ default: ImageMetadata }>(
  "../../assets/foto-smandapbun/kegiatan-sekolah/*.{webp,jpg,jpeg,png}",
  { eager: true },
);

const localImages = Object.values(localImagesGlob).map((img) => img.default);

// Combine with existing albums if needed, or just append as a new album
// We'll create a unified structure for rendering
interface GalleryItem {
  type: "local" | "remote";
  src: string | ImageMetadata;
  alt: string;
}

interface Album {
  title: { id: string; en: string };
  images: GalleryItem[];
}

const albums: Album[] = [
  // ...gallery.albums.map((album: any) => ({
  //   title: album.title,
  //   images: album.images.map((img: string) => ({
  //     type: "remote" as const,
  //     src: img,
  //     alt: getLocalizedValue(album.title, locale),
  //   })),
  // })),
  // Add the local images as a new album
  {
    title: {
      id: "Kegiatan Sekolah",
      en: "School Activities",
    },
    images: localImages.map((img, index) => ({
      type: "local" as const,
      src: img,
      alt: `School Activity ${index + 1}`,
    })),
  },
];
---

<Layout title={getLocalizedValue(gallery.title, locale)}>
  <!-- Hero -->
  <section
    class="hero-gradient text-white py-16 md:py-20"
    style="--hero-image: url('/images/backgrounds/hero-activity.webp');"
    data-testid="gallery-hero"
  >
    <div class="container-custom">
      <nav class="text-sm text-blue-200 mb-4">
        <a href={getLocalizedPath("/", locale)} class="hover:text-white"
          >Beranda</a
        >
        <span class="mx-2">/</span>
        <a href={getLocalizedPath("/blogs", locale)} class="hover:text-white"
          >{t("blogs.title", locale)}</a
        >
        <span class="mx-2">/</span>
        <span class="text-white">{t("blogs.gallery", locale)}</span>
      </nav>
      <h1 class="text-3xl md:text-4xl font-bold font-heading">
        {getLocalizedValue(gallery.title, locale)}
      </h1>
    </div>
  </section>

  <!-- Gallery -->
  <section
    class="section-photo py-16 bg-gray-50 dark:bg-slate-900 transition-colors duration-200"
    style="--section-image: url('/images/backgrounds/section-green.webp');"
    data-testid="gallery-content"
  >
    <div class="container-custom">
      {
        albums.map((album, albumIndex) => (
          <div class="mb-12" data-testid={`album-${albumIndex}`}>
            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-6 flex items-center gap-3">
              <Icon
                name="tabler:photo"
                class="w-6 h-6 text-primary-600 dark:text-primary-400"
              />
              {getLocalizedValue(album.title, locale)}
            </h2>
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
              {album.images.map((image, imageIndex) => (
                <div
                  class="group relative aspect-square bg-gray-200 dark:bg-slate-800 rounded-xl overflow-hidden cursor-pointer"
                  data-testid={`gallery-image-${albumIndex}-${imageIndex}`}
                >
                  {image.type === "local" ? (
                    <Image
                      src={image.src as ImageMetadata}
                      alt={image.alt}
                      width={400}
                      height={400}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                    />
                  ) : (
                    <img
                      src={image.src as string}
                      alt={`${image.alt} - ${imageIndex + 1}`}
                      class="w-full h-full object-cover group-hover:scale-110 transition-transform duration-300"
                    />
                  )}
                  <div class="absolute inset-0 bg-black/0 group-hover:bg-black/30 transition-colors flex items-center justify-center">
                    <Icon
                      name="tabler:zoom-in"
                      class="w-8 h-8 text-white opacity-0 group-hover:opacity-100 transition-opacity"
                    />
                  </div>
                </div>
              ))}
            </div>
          </div>
        ))
      }

      <!-- Back Button -->
      <div class="mt-8 text-center">
        <a
          href={getLocalizedPath("/blogs", locale)}
          class="btn-outline dark:text-white dark:border-gray-600 dark:hover:bg-slate-800"
          data-testid="back-to-blogs"
        >
          <Icon name="tabler:arrow-left" class="w-5 h-5 mr-2" />
          {t("common.back", locale)}
        </a>
      </div>
    </div>
  </section>
</Layout>
